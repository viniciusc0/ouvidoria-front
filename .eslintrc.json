{
  "plugins": [
    "@typescript-eslint", "unused-imports"
  ],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "arrow-body-style": 1,
    "react/display-name": 0,
    "import/no-duplicates": 1,
    "no-extra-boolean-cast": 1,
    "react/no-children-prop": 0,
    "react/self-closing-comp": 2,
    "@next/next/no-img-element": 0,
    "react/no-unescaped-entities": 0,
    "import/no-useless-path-segments": 1,
    "@typescript-eslint/ban-ts-comment": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/no-empty-function": 0,
    "@typescript-eslint/no-non-null-assertion": 0,
    "@typescript-eslint/explicit-module-boundary-types": 0,

    //Responsaveis pelo warning sobre hooks exhaustive-deps
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "off",

    //Responsaveis pelo error de imports duplicados, para corrigir `npx next lint --fix`
    "unused-imports/no-unused-imports": "error",
    "@typescript-eslint/no-duplicate-imports": "warn",

    //Responsavelpelo warning sobre variaveis declaradas e nunca utilizadas.
    "unused-imports/no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "no-unused-vars": "off"
    // caso deseje modificar para o warning come√ßar a aparecer, basta descomentar as linhas abaixo e remover as de cima
    // "@typescript-eslint/no-unused-vars": [
    //     1,
    //     {
    //         "vars": "all",
    //         "args": "none"
    //     }
    // ],


  }
}
